<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_otp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EEEE">

    <LinearLayout
        android:layout_width="@dimen/height_100dp"
        android:layout_height="@dimen/height_100dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="@dimen/height_70dp"
        android:background="@drawable/circle_otp" />

    <LinearLayout
        android:layout_width="@dimen/height_100dp"
        android:layout_height="@dimen/height_100dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-50dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/circle_otp" />

    <LinearLayout
        android:layout_width="@dimen/height_100dp"
        android:layout_height="@dimen/height_100dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="-50dp"
        android:background="@drawable/circle_otp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.7"
            android:orientation="vertical"
            android:weightSum="4">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.95" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.55"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sms" />
            </LinearLayout>


            <ProgressBar
                android:id="@+id/verify_otp_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="OTP Verification"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:padding="5dp"
                android:text="Enter SMS OTP send to your mobile number"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/text_dial_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="+91" />

                <EditText
                    android:id="@+id/editText_Code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.6"
                    android:background="@drawable/layout_bg_white"
                    android:gravity="center"
                    android:hint="Enter OTP"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/text_resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2"
                android:alpha="0.6"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="RESEND OTP"
                android:textColor="#FA6E44"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2" />
        </LinearLayout>

        <Button
            android:id="@+id/button_next_opt_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="0.3"
            android:background="@color/button_green"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="VERIFY"
            android:textColor="@color/white" />

    </LinearLayout>
</FrameLayout>