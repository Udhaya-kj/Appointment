<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ServiceUnavailbleActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_service_unavail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4DBDF1"
        android:elevation="4dp"
        android:gravity="center"
        android:textAlignment="center"
        app:elevation="4dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:title="Service unavailability"
        app:titleTextColor="#FFFFFF" />

    <TextView
        android:id="@+id/text_ser_staff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EEEEEE"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="Select service"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />
    <TextView
        android:id="@+id/tv_no_services"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:text="No Services Created"
        android:textSize="17sp"
        android:visibility="gone" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview_unavailability"
        android:layout_margin="8dp"

        />
</LinearLayout>