<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="vertical"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_slot_cus_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.8"
            android:singleLine="true"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:text="Selva Kumar"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_slot_cus_mob"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:text="9788909099" />

        <TextView
            android:id="@+id/tv_slot_cus_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textColor="#4DBDF1"
            android:text="View" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/image_edit_slot_appt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:padding="20dp"
            android:src="@drawable/edit" />

        <ImageView
            android:id="@+id/image_delete_slot_appt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:padding="18dp"
            android:src="@drawable/trash"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        />
</LinearLayout>