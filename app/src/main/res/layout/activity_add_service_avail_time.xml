<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AddServiceAvailTimeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_ser_avail_time"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4DBDF1"
        android:elevation="4dp"
        android:textAlignment="center"
        app:elevation="4dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:title="Service Availability Time"
        app:titleTextColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_biz_hours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#4DBDF1"
                        android:text="Same as Business Hours" />

                    <RadioButton
                        android:id="@+id/rb_custom_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:buttonTint="#4DBDF1"
                        android:text="Custom Time" />

                    <LinearLayout
                        android:id="@+id/layout_custom_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:paddingStart="10dp"
                            android:text="Select Service Active Days"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="0.7">

                            <Button
                                android:id="@+id/btn_yes_sunday_P"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="0.1"
                                android:background="@color/green_hase"
                                android:gravity="center"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:singleLine="true"
                                android:text="Sun"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:visibility="visible" />

                            <Button
                                android:id="@+id/btn_yes_monday_P"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_marginStart="5dp"
                                android:layout_weight="0.1"
                                android:background="@color/green_hase"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:text="Mon"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="10sp" />

                            <Button
                                android:id="@+id/btn_yes_tuesday_P"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_marginStart="5dp"
                                android:layout_weight="0.1"
                                android:background="@color/green_hase"
                                android:gravity="center"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:text="Tue"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="10sp" />

                            <Button
                                android:id="@+id/btn_yes_wedsnesday_P"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_marginStart="5dp"
                                android:layout_weight="0.1"
                                android:background="@color/green_hase"
                                android:gravity="center"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:text="Wed"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="10sp" />

                            <Button
                                android:id="@+id/btn_yes_thursday_P"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_marginStart="5dp"
                                android:layout_weight="0.1"
                                android:background="@color/green_hase"
                                android:gravity="center"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:text="Thu"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="10sp" />

                            <Button
                                android:id="@+id/btn_yes_friday_P"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_marginStart="5dp"
                                android:layout_weight="0.1"
                                android:background="@color/green_hase"
                                android:gravity="center"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:text="Fri"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="10sp" />

                            <Button
                                android:id="@+id/btn_yes_saturday_P"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_weight="0.1"
                                android:background="@color/green_hase"
                                android:gravity="center"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:text="Sat"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="10sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:background="#EEEEEE"
                            android:gravity="center">

                            <Spinner
                                android:id="@+id/spinner_weekdays"
                                android:layout_width="match_parent"
                                android:layout_height="40dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_add_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/layout_bg_grey"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/text_weekday"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:text="Sunday"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Start Time" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:gravity="center"
                                        android:text="End Time" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/text_start_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="00:00"
                                        android:textColor="#3B91CD" />

                                    <TextView
                                        android:id="@+id/text_end_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:gravity="center"
                                        android:text="00:00"
                                        android:textColor="#3B91CD" />
                                </LinearLayout>
                            </LinearLayout>

                            <Button
                                android:id="@+id/button_add_time"
                                android:layout_width="200dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="15dp"
                                android:background="#4DBDF1"
                                android:text="ADD"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/text_invalid_time"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:minWidth="200dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:background="@color/red"
                            android:gravity="center"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="Invalid Time"
                            android:textColor="@color/white" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recylerview_avail_hours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:paddingTop="5dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/layout_bg_grey"
                            android:layout_marginTop="20dp" />
                    </LinearLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/button_add_service"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:background="#21AE18"
                    android:text="CREATE SERVICE"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>