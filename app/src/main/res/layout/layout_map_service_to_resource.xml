<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_map_ser_res"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="1">

    <TextView
        android:visibility="gone"
        android:id="@+id/text_ser_no"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/text_service_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:fontFamily="@font/lato_medium"
        android:gravity="center_vertical"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.35">
        <EditText
            android:background="@drawable/layout_bg_change_appt_blue"
            android:focusable="true"
            android:enabled="true"
            android:id="@+id/et_max_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_medium"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:singleLine="true" />
    </LinearLayout>


    <CheckBox
        android:layout_marginStart="20dp"
        android:id="@+id/checkbox"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.15"
        android:buttonTint="@color/app_blue"
        android:gravity="center"
        android:scaleX="1"
        android:scaleY="1" />
</LinearLayout>