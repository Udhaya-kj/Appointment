<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_row_customer"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="10"
    android:padding="10dp">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1.2"
        android:src="@drawable/customer"
        android:padding="8dp"
        />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="8.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:padding="8dp"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/text_cus_name"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Jayanth"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:padding="8dp"
                    android:src="@drawable/phone" />

                <TextView
                    android:id="@+id/text_cus_mob"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="9999999999" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <Button
                android:id="@+id/button_view_customer"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.65"
                android:background="@null"
                android:gravity="center"
                android:text="View"
                android:textColor="#4DBDF1"
                android:textSize="13sp" />

            <Button
                android:id="@+id/button_edit_customer"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.65"
                android:background="@null"
                android:gravity="center"
                android:text="Edit"
                android:textColor="#4DBDF1"
                android:textSize="13sp" />

            <Button
                android:id="@+id/button_delete_customer"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.65"
                android:background="@null"
                android:gravity="center"
                android:text="Delete"
                android:textColor="#4DBDF1"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


