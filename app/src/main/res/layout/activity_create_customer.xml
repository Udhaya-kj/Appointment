<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_create_customer"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4DBDF1"
        android:elevation="4dp"
        android:textAlignment="center"
        app:elevation="4dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:title="Add New Customer"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.92"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/name"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_cus_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_bg_grey"
                android:hint="Enter customer name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:hint="@string/mobile"
                android:paddingStart="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_cus_mob"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_bg_grey"
                android:hint="Enter customer mobile"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:paddingStart="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:hint="@string/email"
                android:paddingStart="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_cus_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_bg_grey"
                android:hint="Enter customer email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_create_customer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="0.08"
            android:background="@color/button_green"
            android:text="CREATE CUSTOMER"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
