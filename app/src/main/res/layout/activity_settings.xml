<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/background_light"
        android:elevation="0dp"
        android:textAlignment="center"
        app:elevation="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:title="Settings"
        app:titleTextColor="@color/matt_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:paddingStart="@dimen/height_30dp"
            android:paddingTop="20dp"
            android:paddingEnd="@dimen/height_30dp"
            android:paddingBottom="@dimen/height_30dp">


            <LinearLayout
                android:id="@+id/layout_ser_unavail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/list_item_decor"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="12dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:clickable="false"
                    android:padding="4dp"
                    android:src="@drawable/order"
                    android:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text="Service unavailability"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:clickable="false"
                    android:padding="8dp"
                    android:src="@drawable/right_arrow"
                    android:tint="@color/hint_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_staff_leave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/list_item_decor"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="12dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:clickable="false"
                    android:padding="4dp"
                    android:src="@drawable/user"
                    android:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text="Staff leave"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:clickable="false"
                    android:padding="8dp"
                    android:src="@drawable/right_arrow"
                    android:tint="@color/hint_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_merchant_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/list_item_decor"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="12dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:clickable="false"
                    android:padding="4dp"
                    android:src="@drawable/user"
                    android:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text="Profile"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:clickable="false"
                    android:padding="8dp"
                    android:src="@drawable/right_arrow"
                    android:tint="@color/hint_blue" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_staff_continue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#21AE18"
            android:hint="Next"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
