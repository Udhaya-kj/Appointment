<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.SplashNoActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.MaterialTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="MtButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_green</item>
    </style>

    <style name="MtButtonStyle_blue" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/app_blue</item>
    </style>

</resources>
